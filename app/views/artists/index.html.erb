<p id="notice"><%= notice %></p>

<h3>Listing Artists</h3>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr id="artist-<%= artist.id %>">
        <td><%= artist.name %></td>
        <td><%= artist.description %></td>
        <td><%= link_to 'Show', artist, class: "btn-link" %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist), class: "btn-link" %></td>
        <td><%= link_to 'Destroy', artist, class: "btn-link", method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artist', new_artist_path, class: "btn btn-link" %>
